<div class="fs-container">
  <div id="fs-carouselExampleIndicators" class="carousel slide w-100" data-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#fs-carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#fs-carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#fs-carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>

    <div id="fs-carousel-inner">
      <% @castle.photos.each_with_index do |photo, i|  %>
        <% if i == 0 %>
          <div class="carousel-item active">
        <% else %>
          <div class="carousel-item">
        <% end %>
            <div class="cover center w-100"><%= cl_image_tag photo.key, id: "fs-img" %></div>
          </div>
      <% end %>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#fs-carouselExampleIndicators" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#fs-carouselExampleIndicators" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>

<div class="form-container-registration">
    <div class="form-registration">

      <h2>Inscription</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name,
                      placeholder: "Prénom",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "First Name" },
                      label: false %>
          <%= f.input :last_name,
                      placeholder: "Nom",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "Last Name" },
                      label: false %>
          <%= f.input :email,
                      placeholder: "Email",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label: false %>
          <%= f.input :password,
                      placeholder: "Mot de passe",
                      required: true,
                      hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" },
                      label: false %>
          <%= f.input :password_confirmation,
                      placeholder: "Confirmer mot de passe",
                      required: true,
                      input_html: { autocomplete: "new-password" },
                      label: false %>
        </div>

        <div class="submit-registration">
          <%= f.button :submit, "S'inscrire" %>
        </div>
      <% end %>
        <%= render "devise/shared/links" %>
    </div>
</div>
